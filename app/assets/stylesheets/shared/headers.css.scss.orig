@import 'variables';

#main-header {
	position: fixed;
	height: 44px;
	top: 0;
	left: 0;
	width: 100%;
	z-index: 1;
}
#main-header.outlined {
	background: white;
	box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1);
	z-index: 3;
}

.logo {
	position: absolute;
	top: 0;
	left: 0;
	height: 30px;
	margin: 5px 10px 5px 10px;
}

#main-header-actions-right {
	position: absolute;
	top: 0;
	right: 0;
}

#sign-up {
	width: 67px;
	cursor: pointer;
	text-align: center;
	display: inline;
}

.menu-arrow {
	cursor: pointer;
}

.menu-arrow.black {
	g, path {
		fill: $greydark;
	}
}

.mobile-menu {
	height: 25px;
	z-index: 20;
}



@media (min-width: 1024px) {
