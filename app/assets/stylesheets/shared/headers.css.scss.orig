/********** Menu  ***************/

#menu {
	position: fixed;
	background: white;
	height: 100vh;
	width: 66vw;
	right: 0;
	top: 0;
	box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1);
}

.menu-item {
	height: 40px;
	line-height: 40px;
	color: $red;
	cursor: pointer;
	width: 100%;
	margin: 10px 0px 10px 20px;
}

@media (min-width: 1024px) {
	body {
		#menu {
			width: 160px;
			top: 60px;
			border-radius: 5px;
			right: calc(50vw - 480px);
			height: auto;
		}
	}
}
