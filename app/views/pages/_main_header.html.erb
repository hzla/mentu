<header id="main-header">
	<%= link_to root_path do %>
		<%= image_tag "logo.svg", :class => "logo m-full" %>
	<% end %>

		<div id="main-header-actions-right" class="normal flex-parent">
			<%= link_to "http://www.learnenglish.de" do %>
				<div class="main-header-action no-mobile m-half blue">
					中文
				</div>
			<% end %>

			<% if !current_user %>
				<div class="main-header-action btn blue p-hor m-half" id="login">
					Log In
				</div>
				<div class="main-header-action btn blue-btn m-half" id="sign-up">
					Sign Up
				</div>
			<% else %>
				<%= link_to user_path(current_user) do %>
					<div class="no-mobile current-user-name blue">
						<%= current_user.name %>
					</div>
					<%= image_tag current_user.avatar_url, :class => "current-user-pic m-half no-mobile" %>
				<% end %>
				<%= image_tag "menudeskwhite.svg", :class => "m-half no-mobile menu-arrow svg white" %>
				<%= image_tag "menudeskblack.svg", :class => "m-half no-mobile menu-arrow svg black hidden" %>
				<%= image_tag "menumobile.svg", :class => "m-full mobile-menu no-desk" %>
				<div id="menu" class="hidden">
					<%= link_to user_path(current_user) do %>
						<div class="menu-item">
							Profile
						</div>
					<% end %>
					<%= link_to user_path(current_user) do %>
						<div class="menu-item">
							Rules
						</div>
					<% end %>
					<% if current_admin %>
						<%= link_to '/admin' do %>
							<div class="menu-item">
								Admin Panel
							</div>
						<% end %>
					<% end %>
					<%= link_to logout_path do %>
						<div class="menu-item">
							Logout
						</div>
					<% end %>
				</div>
			<% end %>
		</div>
</header>




