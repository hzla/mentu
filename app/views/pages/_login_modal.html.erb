<div class="login-overlay-container hidden">
	<%= image_tag "close.svg", id: "close-login" %>
	<div class="modal-content">
		<div class="p-bottom-very-big big">Login</div>

		<div id="signup-content">
			<div id="signup-buttons">
				<%= link_to '/auth/facebook' do %>
					<div class="btn blue-btn sign-up-btn m-vert-big" id="facebook">
						通过Facebook登录
					</div>
				<% end %>
<!-- 				<div class="btn sign-up-btn m-vert-big wechat">
					Login with Wechat
				</div>
				<div class="btn sign-up-btn no-mobile wechat">
					Login with Weibo
				</div> -->
			</div>
			<div id="mobile-separator" class="no-desk"></div>
			<div id="desk-separator" class="no-mobile login-separator"></div>
			<div id="signup-form">
				<%= form_for :session, url: sessions_path do |f| %>
					<%= f.text_field :email, :class => "signup-field field m-bottom", placeholder:"邮箱地址" %>
					<%= f.password_field :password, :class => "signup-field field m-vert", placeholder: "密码" %>
					<%= f.submit "登录", :class => "signup-field field m-vert blue-btn", id: "create-user"  %>
				<% end %>
			</div>
		</div>
	</div>
</div>
