<div class="reply">
	<div class="comment-header">
		<%= image_tag reply.user.profile_pic_url, :class => "comment-pic m-top" %>
		<div class="header-text-info p-full inline">
			<div class="bold green header-name inline"><%= reply.user.name %></div>
			<div class="header-heat inline p-hor">432 heat</div>
			<div class="header-school grey p-vert"><%= reply.user.school[0..30] if reply.user.school %></div>
			<%= link_to comment_upvote_path(reply), remote: true, :class => "upvote-link" do %>
				<%= image_tag "upvoteempty.svg", :class => "upvote-arrow" %>
			<% end %>
			<div class="upvote-value grey">
				<%= reply.score %>
			</div>
		</div>
	</div>
	<div class="reply-body">
		<%= reply.body %>
		<div class="comment-timestamp grey p-vert-big">
			<%= reply.timestamp %>
		</div>
	</div>
</div>